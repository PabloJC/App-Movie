<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="match_parent"
            android:textSize="5pt"
            android:textAlignment="center"
            android:layout_marginTop="5dp"
            android:text="Título original"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_originalTitle"
            android:layout_width="match_parent"
            android:textSize="10pt"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Los juegos del hambre"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="5pt"
            android:textAlignment="center"
            android:text="Resumen"
            android:layout_marginTop="5dp"

            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:textSize="7pt"
            android:textAlignment="textStart"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:text="Los juegos del hadsf sdf jdsnf sdjfn sdjfkb dfjhgbdsfjkhbsdf jbdhksf jskdhbf dsjhkfb dsjkhfb j bf jdhs jkdhsb dsfjkhb dfsj dsjdvjdsb jdfhb djfb dsjh bdsfhjb fgjbdfhg jdfkhbg dfsjkhb jkgbhjkbg jksdfbfmbre"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Géneros"
            android:textSize="5pt"

            android:layout_marginTop="5dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_genres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textSize="5pt"
                android:textAlignment="textEnd"
                android:paddingRight="5dp"
                android:text="Fecha de lanzamiento"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_release_date"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textSize="5pt"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:text="12/12/2012"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textSize="5pt"
                android:textAlignment="textEnd"
                android:paddingRight="5dp"
                android:text="Presupuesto"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_budget"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:textSize="5pt"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textAlignment="textStart"
                android:text="3.000.000€"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>




