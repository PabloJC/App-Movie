<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_poster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7.5"
            android:textSize="10pt"
            android:padding="15dp"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:background="@drawable/circle"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="5pt"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:text="Título original"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_originalTitle"
                android:layout_width="match_parent"
                android:textSize="10pt"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:text="Los juegos del hambre"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:textSize="5pt"
                android:textAlignment="center"
                android:text="Resumen"
                android:layout_marginTop="5dp"

                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_overview"
                android:layout_width="match_parent"
                android:textSize="7pt"
                android:textAlignment="textStart"
                android:textStyle="italic"
                android:layout_margin="5dp"
                android:text="Los juegos del hadsf sdf jdsnf sdjfn sdjfkb dfjhgbdsfjkhbsdf jbdhksf jskdhbf dsjhkfb dsjkhfb j bf jdhs jkdhsb dsfjkhb dfsj dsjdvjdsb jdfhb djfb dsjh bdsfhjb fgjbdfhg jdfkhbg dfsjkhb jkgbhjkbg jksdfbfmbre"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Géneros"
                android:layout_marginTop="5dp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:text="Acción, Misterio, Ciencia Ficción, Suspense"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textSize="5pt"
                    android:textAlignment="textEnd"
                    android:paddingRight="5dp"
                    android:text="Fecha de lanzamiento"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textSize="5pt"
                    android:paddingLeft="5dp"
                    android:textAlignment="textStart"
                    android:text="12/12/2012"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textSize="5pt"
                    android:textAlignment="textEnd"
                    android:paddingRight="5dp"
                    android:text="Presupuesto"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_budget"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:textSize="5pt"
                    android:paddingLeft="5dp"
                    android:textAlignment="textStart"
                    android:text="3.000.000€"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producción"
                android:layout_marginTop="10dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tv_homePage"
                android:layout_width="match_parent"
                android:textSize="7pt"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="www.juegosdelambre.com"/>


        </LinearLayout>



    </ScrollView>


</LinearLayout>